{

  "manifest_version" : 2,

  "name" : "Shoply",
  "description" : "checks if products can be found from hilighted page on a text and presents them to the user, as well as links to the products",
  "version" : "1.0",

  "background" : {
    "scripts" : ["background.js"]
  },


  "browser_action" : {
    "default_title" : "Shoply",
    "default_icon" : "icon128.png",
    "default_popup" : "popup.html"
  },

  "icons" : {
    "128" : "icon128.png"
  },

  "permissions" : [
    "activeTab",
    "https://ajax.googleapis.com/ajax/libs/jquery/3.1.1jquery.min.js",
    "tabs",
    "storage",
    "contextMenus",
    "http://*/*",
    "https://*/*"

  ]


}
